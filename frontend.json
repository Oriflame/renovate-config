{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Frontend configuration for Oriflame frontend repositories.",
  "packageRules": [
    {
      "matchDepTypes": [
        "packageManager"
      ],
      "enabled": false
    },
    {
      "groupName": "Non-Oriflame Dependencies (major only)",
      "groupSlug": "other-dependencies-major",
      "matchUpdateTypes": ["major"],
      "excludePackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "matchDepTypes": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    },
    {
      "groupName": "Non-Oriflame Dependencies (non-major)",
      "groupSlug": "other-dependencies-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "excludePackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "matchDepTypes": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    },
    {
      "groupName": "Oriflame Dependencies (major only)",
      "groupSlug": "oriflame-dependencies-major",
      "matchUpdateTypes": ["major"],
      "matchPackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "matchDepTypes": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    },
    {
      "groupName": "Oriflame Dependencies (non-major)",
      "groupSlug": "oriflame-dependencies-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "matchDepTypes": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    }
  ]
}