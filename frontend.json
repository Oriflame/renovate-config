{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Frontend configuration for Oriflame frontend repositories.",
  "updateLockFiles": true,
  "azureAutoComplete": true,
  "commitMessageTopic": "dependency {{depName}}",
  "commitMessage": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} {{{commitMessageTopic}}}{{{commitMessageSuffix}}}",
  "commitMessageAction": "Update",
  "commitMessageSuffix": ".",
  "rangeStrategy": "bump",
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "groupName": "Oriflame Dependencies (non-major)",
      "groupSlug": "oriflame-dependencies-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchFiles": ["package.json"],
      "automerge": true,
      "matchPackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "depTypeList": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    },
    {
      "groupName": "Non-Oriflame Dependencies (non-major)",
      "groupSlug": "other-dependencies-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchFiles": ["package.json"],
      "automerge": true,
      "matchPackagePatterns": [".*"],
      "matchPackagePrefixes": [".*"],
      "excludePackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "depTypeList": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    },
    {
      "groupName": "Oriflame Dependencies (major only)",
      "groupSlug": "oriflame-dependencies-major",
      "matchUpdateTypes": ["major"],
      "matchFiles": ["package.json"],
      "matchPackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "depTypeList": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    },
    {
      "groupName": "Non-Oriflame Dependencies (major only)",
      "groupSlug": "other-dependencies-major",
      "matchUpdateTypes": ["major"],
      "matchFiles": ["package.json"],
      "matchPackagePatterns": [".*"],
      "matchPackagePrefixes": [".*"],
      "excludePackagePrefixes": [
        "@oriflame/",
        "@ori-ui/",
        "@ori/",
        "@ori-appshell/",
        "@ori-events/"
      ],
      "depTypeList": [
        "devDependencies",
        "dependencies",
        "peerDependencies",
        "resolutions",
        "overrides"
      ]
    }
  ]
}