{
  "description": "Recommended frontend configuration for oriflame frontend repositories.",
  "extends": [
    ":semanticCommitScopeDisabled"
  ],
  "semanticCommitType": "deps",
  "semanticCommits": "enabled",
  "updateLockFiles": true,
  "azureAutoComplete": true,
  "commitMessageTopic": "dependency {{depName}}",
  "commitMessage": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} {{{commitMessageTopic}}}{{{commitMessageSuffix}}}",
  "commitMessageAction": "Update",
  "commitMessageSuffix": ".",
  "rangeStrategy": "bump",
  "enabledManagers": [
    "dockerfile",
    "npm"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "docker-update"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchPackagePrefixes": [
        "@oriflame/"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "oriflame dependencies",
      "groupSlug": "oriflame-dependencies",
      "semanticCommitType": "deps"
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchPackagePrefixes": [
        "@ori-ui/"
      ],
      "groupName": "ori-ui dependencies",
      "groupSlug": "ori-ui-dependencies",
      "semanticCommitType": "deps"
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchPackagePrefixes": [
        "@ori/"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "ori dependencies",
      "groupSlug": "ori-dependencies",
      "semanticCommitType": "deps"
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchPackagePrefixes": [
        "@ori-events/"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "ori dependencies",
      "groupSlug": "ori-events-dependencies",
      "semanticCommitType": "deps"
    },
    {
      "matchDepTypes": [
        "peerDependencies",
        "resolutions",
        "engines"
      ],
      "rangeStrategy": "widen",
      "semanticCommitType": "build"
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "groupName": "all dev dependencies",
      "groupSlug": "all-dev-dependencies",
      "semanticCommitType": "build",
      "rangeStrategy": "fix"
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "rangeStrategy": "bump",
      "semanticCommitType": "deps"
    }
  ]
}