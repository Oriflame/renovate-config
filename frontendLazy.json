{
  "description": "Lazy frontend configuration for oriflame frontend repositories.",
  "extends": [":semanticCommitScopeDisabled"],
  "semanticCommitType": "deps",
  "semanticCommits": "enabled",
  "updateLockFiles": true,
  "azureAutoComplete": true,
  "commitMessageTopic": "Update {{depName}}",
  "commitMessage": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} {{{commitMessageTopic}}}{{{commitMessageSuffix}}}",
  "commitMessageSuffix": ".",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "all dev dependencies",
      "groupSlug": "all-dev-dependencies",
      "semanticCommitType": "build",
      "rangeStrategy": "fix"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "groupName": "all dependencies",
      "groupSlug": "all-dependencies",
      "semanticCommitType": "deps",
      "rangeStrategy": "fix"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["peerDependencies"],
      "rangeStrategy": "widen",
      "semanticCommitType": "deps"
    }
  ]
}
